md-toolbar.md-toolbar-tools.transparent_gradient
  md-button.md-icon-button(aria-label='Menu', ng-click='$ctrl.toggleSideMenu()')
    md-icon menu
  md-button.md-icon-button(aria-label='Back', ng-click='$ctrl.back()')
    md-icon keyboard_backspace
  span(flex='')
  md-button.md-icon-button(aria-label='Zoom in')
    md-icon zoom_in
  md-button.md-icon-button(aria-label='Info', ng-click='$ctrl.togglePhotoForm()')
    md-icon info
  md-button.md-icon-button(aria-label='Delete', ng-click='$ctrl.deletePhoto()')
    md-icon delete
  md-menu(md-position-mode='target-right target')
    md-button.md-icon-button(aria-label='More' class="md-icon-button" ng-click='$ctrl.openMenu($mdOpenMenu, $event)')
      md-icon(md-menu-origin='') more_vert
    md-menu-content(width='3')
      md-menu-item(ng-repeat='item in [1, 2, 3]')
        md-button(class="md-accent" ng-click='$ctrl.menuItemClick($index)')
          div(layout='row', flex='')
            p(flex='') Option {{item}}
