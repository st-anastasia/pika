photos-toolbar

md-content(md-scroll-y, layout='column', flex='', layout-fill, layout-padding)
  div(ng-repeat='(uploadMonth, photos) in $ctrl.photos')

    div {{uploadMonth}}

    md-grid-list(flex md-cols='6', md-cols-xs='1', md-cols-sm='4', md-row-height='4:3', md-gutter='10px')
      md-grid-tile(
        ng-repeat='photo in photos'
        ng-style="{ 'background-image': 'url(' + photo.src + ')', 'background-size' : 'cover'}"
        ng-click="$ctrl.showPhoto(photo._id)"
      )
        md-grid-tile-footer
          h3 {{photo.metadata.title}}

  div(layout='row')
    md-button(
      ng-repeat='page in $ctrl.photosGallery.pages'
      ng-class='$ctrl.pageButtonClass(page)'
      ng-click='$ctrl.showPage(page)'
   ) {{page}}
